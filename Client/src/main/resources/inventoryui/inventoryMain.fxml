<AnchorPane fx:id="back" prefHeight="600.0" prefWidth="800.0" fx:controller="ui.inventoryui.InventoryUIController" stylesheets="@../css/list.css" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
    <children>

        <TopBar fx:id="bar" layoutX="160"/>
        <fx:include fx:id="board" source="../util/board.fxml" layoutX="160" layoutY="40"/>



        <JFXListView fx:id="navigation" layoutY="40.0" prefHeight="560.0" prefWidth="160.0">
            <HBox fx:id="goodsClassification">
                <Label>
                    <padding><Insets bottom="8" left="5" top="8" /></padding>
                    GoodsClassification
                    <graphic>
                        <StackPane styleClass="custom-jfx-list-view-icon-container">
                            <MaterialDesignIconView glyphName="ACCOUNT" size="1.5em" style="-fx-fill: linear-gradient(to bottom right, #8CA2F6,#659EFB)"/>
                        </StackPane>
                    </graphic>
                </Label>
            </HBox>
            <HBox fx:id="goods">
                <Label>
                    <padding><Insets bottom="8" left="5" top="8" /></padding>
                    Goods
                    <graphic>
                        <StackPane styleClass="custom-jfx-list-view-icon-container">
                            <MaterialDesignIconView glyphName="ACCOUNT" size="1.5em" style="-fx-fill: linear-gradient(to bottom right, #8CA2F6,#659EFB)"/>
                        </StackPane>
                    </graphic>
                </Label>
            </HBox>
            <HBox fx:id="inventoryView">
                <Label>
                    <padding><Insets bottom="8" left="5" top="8" /></padding>
                    InventoryView
                    <graphic>
                        <StackPane styleClass="custom-jfx-list-view-icon-container">
                            <MaterialDesignIconView glyphName="ACCOUNT" size="1.5em" style="-fx-fill: linear-gradient(to bottom right, #8CA2F6,#659EFB)"/>
                        </StackPane>
                    </graphic>
                </Label>
            </HBox>
            <HBox fx:id="inventoryCheck">
                <Label>
                    <padding><Insets bottom="8" left="5" top="8" /></padding>
                    InventoryCheck
                    <graphic>
                        <StackPane styleClass="custom-jfx-list-view-icon-container">
                            <MaterialDesignIconView glyphName="ACCOUNT" size="1.5em" style="-fx-fill: linear-gradient(to bottom right, #8CA2F6,#659EFB)"/>
                        </StackPane>
                    </graphic>
                </Label>
            </HBox>
            <HBox fx:id="receipt">
                <Label>
                    <padding><Insets bottom="8" left="5" top="8" /></padding>
                    Receipt
                    <graphic>
                        <StackPane styleClass="custom-jfx-list-view-icon-container">
                            <MaterialDesignIconView glyphName="RECEIPT" size="1.5em" style="-fx-fill: linear-gradient(to bottom right, #8CA2F6,#659EFB)"/>
                        </StackPane>
                    </graphic>
                </Label>
            </HBox>
            <HBox fx:id="inventoryGift"><padding><Insets bottom="8" left="18" top="8" /></padding><Label>InventoryGift</Label></HBox>
            <HBox fx:id="inventoryDamage"><padding><Insets bottom="8" left="18" top="8" /></padding><Label>InventoryDamage</Label></HBox>
            <HBox fx:id="inventoryOverflow"><padding><Insets bottom="8" left="18" top="8" /></padding><Label>InventoryOverflow</Label></HBox>
            <HBox fx:id="inventoryWarning"><padding><Insets bottom="8" left="18" top="8" /></padding><Label>InventoryWarning</Label></HBox>

        </JFXListView>

        <AnchorPane fx:id="logopane"  prefHeight="40.0" prefWidth="160.0" style="-fx-background-color: white">
            <children>
                <ImageView fitHeight="52.0" fitWidth="98.0" layoutX="24.0" layoutY="2.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../default/logo.jpg" />
                    </image>
                </ImageView>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>

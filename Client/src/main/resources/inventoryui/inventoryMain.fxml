<StackPane fx:id="mainpane" prefHeight="600.0" prefWidth="800.0" stylesheets="@../css/List.css" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.inventoryManagerui.InventoryUIController">

    <children>

    <AnchorPane fx:id="GoodsList" prefHeight="600.0" prefWidth="800.0">
        <children>


            <TopBar fx:id="bar" layoutX="160"/>
            <fx:include  fx:id="board" source="/userui/board.fxml" layoutX="160" layoutY="40"/>

            <JFXListView fx:id="navigation" layoutY="40.0" prefHeight="560.0" prefWidth="160.0">
                <Label fx:id="goodsClassification" text="商品分类" style="-fx-padding: 8 0 8 10;">
                    <graphic>
                        <StackPane style="-fx-padding: 0 10 0 0;">
                            <FontAwesomeIconView fx:id="goodsClassificationIcon" size="1em"/>
                        </StackPane>
                    </graphic>
                </Label>
                <Label fx:id="goods" text="商品" style="-fx-padding: 8 0 8 10;">
                    <graphic>
                        <StackPane style="-fx-padding: 0 10 0 0;">
                            <FontAwesomeIconView fx:id="goodsIcon" size="1em"/>
                        </StackPane>
                    </graphic>
                </Label>
                <Label fx:id="inventoryReceiptList" text="单据" style="-fx-padding: 8 0 8 10;">
                    <graphic>
                        <StackPane style="-fx-padding: 0 10 0 0;">
                            <FontAwesomeIconView fx:id="billReceiptListIcon" size="1em"/>
                        </StackPane>
                    </graphic>
                </Label>
                <Label fx:id="inventoryGiftReceipt" text="库存赠送单"  style="-fx-padding: 0 0 0 50;">
                </Label>
                <Label fx:id="inventoryDamageReceipt" text="库存报损单"  style="-fx-padding: 0 0 0 50;">
                </Label>
                <Label fx:id="inventoryOverflowReceipt" text="库存报溢单"  style="-fx-padding: 0 0 0 50;">
                </Label>
                <Label fx:id="inventoryWarningReceipt" text="库存报警单"  style="-fx-padding: 0 0 0 50;">
                </Label>
            <Label fx:id="inventoryView" text="库存查看" style="-fx-padding: 8 0 8 10;">
                <graphic>
                    <StackPane style="-fx-padding: 0 10 0 0;">
                        <FontAwesomeIconView fx:id="inventoryViewIcon" size="1em"/>
                    </StackPane>
                </graphic>
            </Label>
            <Label fx:id="inventoryCheck" text="库存盘点" style="-fx-padding: 8 0 8 10;">
                <graphic>
                    <StackPane style="-fx-padding: 0 10 0 0;">
                        <FontAwesomeIconView fx:id="inventoryCheckIcon" size="1em"/>
                    </StackPane>
                </graphic>
            </Label>


            </JFXListView>



            <AnchorPane fx:id="logopane" prefHeight="40.0" prefWidth="160.0" style="-fx-background-color: white">
                <children>
                    <ImageView fitHeight="52.0" fitWidth="98.0" layoutX="24.0" layoutY="2.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@../default/logo.jpg" />
                        </image>
                    </ImageView>
                </children>
            </AnchorPane>
        </children>


    </AnchorPane>


    </children>

<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXCheckBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import com.jfoenix.controls.JFXRippler?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import utilComponent.CircleImageView?>
<fx:root type="javafx.scene.layout.HBox" spacing="35" prefHeight="40" alignment="CENTER"  xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1"  >
    <padding><Insets top="-1" bottom="-8" right="30" /></padding>
    <children>

        <JFXCheckBox fx:id="cb" mnemonicParsing="false" text="" translateY="-5"/>
        <HBox spacing="20" translateY="12">
            <children>
                <CircleImageView fx:id="civ" stroke="dimgrey" strokeType="INSIDE" translateY="-5" radius="15" scaleX="1.3" scaleY="1.3"/>
                <Label fx:id="username" />
            </children>
        </HBox>

        <Label fx:id="usertype" translateY="-5"/>
        <Label fx:id="email" translateY="-5"/>
        <Label fx:id="phone" translateY="-5"/>
        <JFXRippler fx:id="rippler" position="BACK" styleClass="icons-rippler" maskType="CIRCLE" >
            <StackPane style="-fx-padding: 10;" translateY="5">
                <FontAwesomeIconView glyphName="TAG" size="1em"
                                     styleClass="icon"/>
            </StackPane>
        </JFXRippler>
    </children>
</fx:root>


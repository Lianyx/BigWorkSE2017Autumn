<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import com.jfoenix.controls.JFXTextField?>
<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXRippler?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import de.jensd.fx.glyphs.materialdesignicons.MaterialDesignIconView?>
<fx:root type="AnchorPane" fx:id="accountListPane" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
         prefHeight="560.0" prefWidth="640.0">

    <JFXTextField fx:id="searchField" layoutX="27.0" layoutY="28.0" prefHeight="30.0" prefWidth="150.0"/>

    <JFXRippler fx:id="search" onMouseClicked="#search" layoutX="177" layoutY="22" maskType="CIRCLE" position="BACK">
        <StackPane style="-fx-padding: 8;" translateY="5">
            <FontAwesomeIconView glyphName="SEARCH" size="1.5em" styleClass="icon"/>
        </StackPane>
    </JFXRippler>

    <JFXButton fx:id="filter" text="Filter" layoutX="420.0" layoutY="35.0"
               mnemonicParsing="false" >
        <graphic>
            <HBox>
                <children>
                    <JFXRippler position="BACK" styleClass="icons-rippler">
                        <StackPane>
                            <FontAwesomeIconView fill="white" glyphName="NAVICON" size="1em" styleClass="icon" />
                        </StackPane>
                    </JFXRippler>
                </children>
            </HBox>
        </graphic>
    </JFXButton>

    <JFXButton fx:id="add" text="Add" layoutX="494.0" layoutY="35.0"
               mnemonicParsing="false"  onMouseClicked="#add" >
        <graphic>
            <HBox>
                <children>
                    <JFXRippler position="BACK" styleClass="icons-rippler">
                        <StackPane>
                            <FontAwesomeIconView fill="white" glyphName="PLUS" size="1em" styleClass="icon" />
                        </StackPane>
                    </JFXRippler>
                </children>
            </HBox>
        </graphic>
    </JFXButton>

    <JFXButton fx:id="delete" layoutX="565.0" layoutY="35.0" mnemonicParsing="false" onMouseClicked="#deleteList" text="Delete">
        <graphic>
            <HBox>
                <children>
                    <JFXRippler position="BACK" styleClass="icons-rippler">
                        <StackPane>
                            <MaterialDesignIconView fill="white" glyphName="DELETE" size="1em" styleClass="icon" />
                        </StackPane>
                    </JFXRippler>
                </children>
            </HBox>
        </graphic>
    </JFXButton>

    <BorderPane fx:id="borderpane" layoutX="20.0" layoutY="80.0" prefHeight="480.0" prefWidth="600.0"/>
</fx:root>

<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.MemberPOMapper">
    <resultMap id="resultMap" type="po.MemberPO">
        <result column="memberId" property="memberId"/>
    </resultMap>

    <select id="getId" resultType="int">
        select max(memberId)+1 from Member
    </select>

    <insert id="insert">
        INSERT INTO Member(memberId,memberCategory,VIPgrade,memberName,clerkName,phoneNumber,address,zipCode,emailAddress,debtCeiling,debt,credit,isDeleted,comment)
        VALUES (#{memberId},#{memberCategory},#{VIPgrade},#{memberName},#{clerkName},#{phoneNumber},#{address},#{zipCode},#{emailAddress},#{debtCeiling},#{debt},#{credit},#{isDeleted},#{comment})
    </insert>

    <update id="update">
        update Member set memberId=#{memberId},memberCategory=#{memberCategory},VIPgrade=#{VIPgrade},memberName=#{memberName},clerkName=#{clerkName},phoneNumber=#{phoneNumber},address=#{address},zipCode=#{zipCode},emailAddress=#{emailAddress},debtCeiling=#{debtCeiling},debt=#{debt},credit=#{credit},isDeleted=#{isDeleted},comment=#{comment}
        where memberId = #{memberId}
    </update>

    <delete id="delete">
        DELETE FROM Member WHERE memberId = #{memberId}
    </delete>

    <select id="showDetail" resultType="po.MemberPO">
        SELECT * FROM Member WHERE memberId = #{memberId}
    </select>
    <select id="search" resultMap="resultMap">
        select * from Member
        <where>
            <if test="memberCategory != null">
                memberCategory = #{memberCategory}
            </if>
            <if test="degree != 0">
                AND VIPgrade &gt;= #{degree}
            </if>
        </where>
    </select>

</mapper>

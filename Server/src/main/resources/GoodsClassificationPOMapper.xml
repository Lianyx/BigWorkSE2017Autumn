<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="data.goodsdata.GoodsClassficationPOMapper">
    <!-- 
         商品分类PO的添加操作
    -->
    <insert id="insert">
        insert into goodsclassification(id,_name,fatherId) values(#{id}, #{_name}, #{fatherId})
    </insert>

    <!--
         商品分类PO的删除操作
    -->
    <delete id="delete">
        delete from goodsclassification where id = #{id}
    </delete>

    <!--
         商品分类PO的修改操作
    -->
    <update id="update">
        update goodsclassification set id=#{id}, _name=#{_name}, fatherId=#{fatherId} where id=#{id}
    </update>

    <!--
         获取所有商品分类
    -->
    <select id="show" resultType="po.GoodsClassificationPO">
        select * from goodsclassification
    </select>
</mapper>